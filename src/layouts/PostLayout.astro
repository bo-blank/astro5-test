---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author, image, category, tags } = post.data;

// Calculate reading time
const readingTime = Math.ceil(post.body.split(/\s+/).length / 200);
---

<BaseLayout pageTitle={title}>
  <article class="post-container">
    <header class="post-header">
      <div class="post-meta">
        <span class="category-badge">{category}</span>
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span class="reading-time">{readingTime} min read</span>
      </div>

      <h1 class="post-title">{title}</h1>

      <p class="post-description">{description}</p>

      <div class="post-author">
        <span>By {author}</span>
      </div>

      {image && (
        <img src={image.url} alt={image.alt} class="post-image" />
      )}
    </header>

    <div class="post-content">
      <slot />
    </div>

    {tags.length > 0 && (
      <footer class="post-footer">
        <div class="tags">
          {tags.map((tag: string) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      </footer>
    )}
  </article>
</BaseLayout>

<style>
  .post-container {
    max-width: 65ch;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .category-badge {
    display: inline-block;
    background-color: #e8f4f8;
    color: #0c5f7f;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 1.5rem 0 1rem 0;
    color: #1a1a1a;
    font-weight: 700;
  }

  .post-description {
    font-size: 1.25rem;
    line-height: 1.5;
    color: #555;
    margin: 1rem 0 1.5rem 0;
    font-style: italic;
  }

  .post-author {
    color: #888;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .post-image {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
    display: block;
  }

  .post-content {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #333;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #f5f5f5;
    color: #00539F;
    border: 1px solid #ddd;
    border-radius: 0.25rem;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .tag:hover {
    background-color: #e8f4f8;
    border-color: #00539F;
  }

  /* Typography improvements for readability */
  :global(.post-content h2) {
    font-size: 1.75rem;
    margin: 2rem 0 1rem 0;
    font-weight: 700;
    color: #1a1a1a;
  }

  :global(.post-content h3) {
    font-size: 1.35rem;
    margin: 1.5rem 0 0.75rem 0;
    font-weight: 600;
    color: #1a1a1a;
  }

  :global(.post-content p) {
    margin: 1rem 0;
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  :global(.post-content li) {
    margin: 0.5rem 0;
  }

  :global(.post-content a) {
    color: #00539F;
    text-decoration: none;
    border-bottom: 1px solid #e0e0e0;
    transition: border-color 0.2s;
  }

  :global(.post-content a:hover) {
    border-bottom-color: #00539F;
  }

  :global(.post-content blockquote) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    border-left: 4px solid #00539F;
    color: #666;
    font-style: italic;
  }

  :global(.post-content code) {
    background-color: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  :global(.post-content pre) {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  :global(.post-content pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
  }

  @media (max-width: 636px) {
    .post-container {
      margin: 1rem 0;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-description {
      font-size: 1rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
