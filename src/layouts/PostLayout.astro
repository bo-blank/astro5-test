---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author, image, category, tags } = post.data;

// Calculate reading time
const readingTime = Math.ceil(post.body.split(/\s+/).length / 200);
---

<BaseLayout pageTitle={title}>
  {image && (
    <img src={image.url} alt={image.alt} class="w-full h-auto max-h-[500px] object-cover rounded-lg" />
  )}
  <article class="mx-auto max-w-prose px-4 sm:px-6 py-8 sm:py-12 animate-fade-in">
    <header class="mb-8 sm:mb-12">
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider bg-secondary/20 text-secondary">
          {category}
        </span>
        <time datetime={pubDate.toISOString()} class="text-sm text-muted-foreground">
          {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span class="text-sm text-muted-foreground">
          {readingTime} min read
        </span>
      </div>

      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-foreground mb-4 leading-tight">
        {title}
      </h1>

      <p class="text-lg sm:text-xl text-muted-foreground/90 italic leading-relaxed mb-6 max-w-2xl">
        {description}
      </p>

      <div class="flex items-center gap-2 text-sm text-muted-foreground">
        <span>By</span>
        <span class="font-semibold text-foreground">{author}</span>
      </div>
    </header>

    <div class="prose prose-sm sm:prose-base prose-invert max-w-none">
      <slot />
    </div>

    {tags.length > 0 && (
      <footer class="mt-12 sm:mt-16 pt-8 border-t border-border/30">
        <div class="flex flex-wrap gap-2">
          {tags.map((tag: string) => (
            <a
              href={`/tags/${tag}`}
              class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-secondary/10 text-secondary hover:bg-secondary/20 border border-secondary/30 hover:border-secondary/50 transition-all duration-200"
            >
              #{tag}
            </a>
          ))}
        </div>
      </footer>
    )}
  </article>
</BaseLayout>

<style>
  /* Typography improvements for prose content */
  :global(.prose h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin: 1.5rem 0;
  }

  :global(.prose h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 1rem 0;
  }

  :global(.prose p) {
    margin: 1rem 0;
    line-height: 1.75;
  }

  :global(.prose ul),
  :global(.prose ol) {
    margin: 1rem 0;
    margin-left: 1.5rem;
  }

  :global(.prose li) {
    margin: 0.5rem 0;
  }

  :global(.prose a) {
    color: hsl(var(--primary));
    text-decoration: underline;
    transition: all 0.2s;
  }

  :global(.prose a:hover) {
    text-decoration: none;
  }

  :global(.prose blockquote) {
    margin: 1.5rem 0;
    padding-left: 1rem;
    border-left: 4px solid hsl(var(--primary) / 0.5);
    color: hsl(var(--muted-foreground));
    font-style: italic;
  }

  :global(.prose code) {
    background-color: hsl(var(--secondary) / 0.2);
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-family: 'Courier New', monospace;
  }

  :global(.prose pre) {
    background-color: hsl(var(--secondary) / 0.2);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  :global(.prose pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
  }

  :global(.prose table) {
    width: 100%;
    margin: 1rem 0;
    border-collapse: collapse;
  }

  :global(.prose th),
  :global(.prose td) {
    border: 1px solid hsl(var(--border) / 0.5);
    padding: 0.5rem 1rem;
  }

  :global(.prose th) {
    background-color: hsl(var(--secondary) / 0.1);
    font-weight: 600;
  }
</style>
