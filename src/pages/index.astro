---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const pageTitle = "Digital Divide";

// Get all published posts
const allPosts = await getCollection('posts', ({ data }) => !data.draft);

// Get featured posts (newest featured first)
const featuredPosts = allPosts
  .filter(post => post.data.featured)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

// Get top 4 posts for "Today's Mix" section (mix of featured and recent)
const todaysMix = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 4);

// Get recent posts (newest first, limit to 6)
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 6);

// Get unique categories
const categories = [
  { name: 'Essay', color: 'bg-purple-500/20 text-purple-400' },
  { name: 'Article', color: 'bg-blue-500/20 text-blue-400' },
  { name: 'Review', color: 'bg-red-500/20 text-red-400' },
  { name: 'Interview', color: 'bg-teal-500/20 text-teal-400' },
  { name: 'Photo Essay', color: 'bg-orange-500/20 text-orange-400' }
];
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Compact Hero Section -->
  <section class="relative py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-5xl sm:text-6xl font-bold tracking-tight text-foreground mb-4 leading-tight">
          Digital Divide
        </h1>

        <p class="text-xl sm:text-2xl text-muted-foreground mb-3 leading-relaxed">
          Thoughtful essays on culture, technology, and the intersections between
        </p>

        <p class="text-lg text-muted-foreground/80 mb-6 max-w-2xl">
          Exploring how technology shapes culture and how culture shapes technology. Essays, articles, interviews, and critical perspectives.
        </p>

        <div class="flex flex-wrap gap-3">
          <a href="/blog" class="inline-flex items-center justify-center px-6 py-2.5 text-sm font-semibold rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors duration-200">
            Read Articles
          </a>
          <a href="/categories" class="inline-flex items-center justify-center px-6 py-2.5 text-sm font-semibold rounded-md border border-primary text-primary hover:bg-primary/5 transition-colors duration-200">
            Browse Categories
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Today's Mix Section (New Yorker Style) -->
  {todaysMix.length > 0 && (
    <section class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-10 tracking-tight">Today's Mix</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {todaysMix.map((post) => (
            <a href={`/posts/${post.slug}`} class="group block h-full">
              <article class="h-full flex flex-col overflow-hidden transition-all duration-300 hover:opacity-90">
                {/* Image Container */}
                {post.data.image && (
                  <div class="relative w-full aspect-square overflow-hidden mb-4 bg-muted rounded-sm">
                    <img
                      src={post.data.image.url}
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
                  </div>
                )}

                {/* Content */}
                <div class="flex-1 flex flex-col">
                  <span class="inline-block text-xs font-bold uppercase tracking-wider text-primary mb-2 w-fit">
                    {post.data.category}
                  </span>

                  <h3 class="text-base sm:text-lg font-bold text-foreground mb-2 leading-snug group-hover:text-primary transition-colors duration-200 line-clamp-3">
                    {post.data.title}
                  </h3>

                  <p class="text-sm text-muted-foreground mb-3 flex-grow line-clamp-2">
                    {post.data.description}
                  </p>

                  <div class="text-xs text-muted-foreground">
                    By {post.data.author || 'Staff'} · {new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Categories Section -->
  <section class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 bg-secondary/5">
    <div class="mx-auto max-w-7xl">
      <div class="mb-10">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground tracking-tight">Browse by Category</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-5">
        {categories.map((cat) => {
          const postCount = allPosts.filter(p => p.data.category === cat.name).length;
          return (
            <a href={`/categories/${cat.name.toLowerCase().replace(' ', '-')}`} class="group">
              <div class="h-full p-5 border border-border/50 rounded hover:border-primary/50 transition-all duration-200 hover:shadow-md hover:bg-primary/5">
                <div class="inline-block px-2 py-1 mb-3 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-wider">
                  {cat.name}
                </div>
                <p class="text-sm text-muted-foreground">{postCount} {postCount === 1 ? 'article' : 'articles'}</p>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Recent Posts Section -->
  {recentPosts.length > 0 && (
    <section class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="mb-10">
          <h2 class="text-3xl sm:text-4xl font-bold text-foreground tracking-tight">Recently Published</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {recentPosts.map((post) => (
            <a href={`/posts/${post.slug}`} class="group block h-full">
              <article class="h-full flex flex-col transition-all duration-300 hover:opacity-90">
                {/* Image Container */}
                {post.data.image && (
                  <div class="relative w-full aspect-video overflow-hidden mb-4 bg-muted rounded-sm">
                    <img
                      src={post.data.image.url}
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
                  </div>
                )}

                {/* Content */}
                <div class="flex-1 flex flex-col">
                  <span class="inline-block text-xs font-bold uppercase tracking-wider text-primary mb-2 w-fit">
                    {post.data.category}
                  </span>

                  <h3 class="text-lg sm:text-xl font-bold text-foreground mb-2 leading-snug group-hover:text-primary transition-colors duration-200 line-clamp-2">
                    {post.data.title}
                  </h3>

                  <p class="text-sm text-muted-foreground mb-4 flex-grow line-clamp-2">
                    {post.data.description}
                  </p>

                  <div class="flex items-center justify-between text-xs text-muted-foreground">
                    <span>{new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                    <span class="text-primary font-semibold group-hover:translate-x-1 transition-transform duration-200">→</span>
                  </div>
                </div>
              </article>
            </a>
          ))}
        </div>

        <div class="text-center">
          <a href="/blog" class="inline-flex items-center justify-center px-6 py-2.5 text-sm font-semibold rounded-md border border-primary text-primary hover:bg-primary/5 transition-colors duration-200">
            View All Articles
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Newsletter Section -->
  <section class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 bg-secondary/5">
    <div class="mx-auto max-w-2xl">
      <div class="border-t border-border/30 pt-10">
        <h2 class="text-2xl sm:text-3xl font-bold text-foreground mb-2">Stay in the Loop</h2>
        <p class="text-muted-foreground mb-6">
          Get the latest essays and articles delivered to your inbox.
        </p>

        <form class="flex flex-col sm:flex-row gap-2">
          <input
            type="email"
            placeholder="Your email"
            class="flex-1 px-4 py-3 rounded-md bg-card border border-border/50 text-foreground placeholder:text-muted-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/30"
            required
          />
          <button
            type="submit"
            class="px-5 py-3 bg-primary text-primary-foreground font-semibold rounded-md hover:bg-primary/90 transition-colors duration-200 whitespace-nowrap text-sm"
          >
            Subscribe
          </button>
        </form>

        <p class="text-xs text-muted-foreground mt-3">
          No spam. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>