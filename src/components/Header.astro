---
import Navigation from './Navigation.astro';
import Hamburger from './Hamburger.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-50 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 border-b border-border/40">
    <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
        <div class="flex items-center gap-4">
            <a href="/" class="text-xl font-bold text-foreground hover:text-primary transition-colors duration-200">
                Digital Divide
            </a>
        </div>

        <div class="hidden md:flex items-center gap-2">
            <Navigation />
        </div>

        <div class="flex items-center gap-2">
            <div class="md:hidden">
                <Hamburger />
            </div>
            <ThemeToggle />
        </div>
    </nav>
</header>
