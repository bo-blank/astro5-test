<footer class="border-t border-border/30 bg-primary/95 py-12 md:py-16">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4 mb-12">
      <!-- Brand Section -->
      <div class="col-span-1 md:col-span-1 lg:col-span-1">
        <div class="mb-4">
          <h3 class="text-2xl font-bold text-primary-foreground tracking-tight">Digital Divide</h3>
          <p class="mt-2 text-sm text-muted-foreground/90 leading-relaxed max-w-xs">
            Thoughtful essays on culture, technology, and the intersections between.
          </p>
        </div>

        <!-- Social Icons -->
        <div class="flex gap-3 mt-6">
          <a
            href="https://twitter.com"
            aria-label="Twitter"
            title="Twitter"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary/30 text-primary-foreground hover:bg-secondary/50 transition-all duration-200 hover:scale-110"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2s9 5 20 5a9.5 9.5 0 00-9-5.5c4.75 2.25 7-7 7-7"/>
            </svg>
          </a>
          <a
            href="https://github.com"
            aria-label="GitHub"
            title="GitHub"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary/30 text-primary-foreground hover:bg-secondary/50 transition-all duration-200 hover:scale-110"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
